<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/testLocationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <Button
        android:id="@+id/initGpsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Initialise GPS" />

    <Button
        android:id="@+id/initTargetButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Initialise Target" />

    <Button
        android:id="@+id/startTrackingButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Tracking" />

    <Button
        android:id="@+id/stopTrackingButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop Tracking" />

    <Button
        android:id="@+id/DistanceButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get elapsed distance" />

</LinearLayout>
